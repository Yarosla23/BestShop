<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>
  <%= image_tag product.image.url, style: "width:200px; height:200px;", class: 'img-fluid rounded-circle float-right' %>
       
  <p>
    <strong>Full description:</strong>
    <%= product.full_description %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= product.color %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= product.size %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

</div>
